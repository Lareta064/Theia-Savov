//- include ../mixins/_header.pug
mixin category-card(txt, img)
	.category-card
		p !{txt}
		img(src="./img/category/cat"+ img +".webp", srcset="./img/category/cat"+ img +"@2x.webp 2x" alt="img" width="312" height="165" loading="lazy")
mixin category-card-ui(txt, img)
	.category-card
		p !{txt}
		img(src="../img/category/cat"+ img +".webp", srcset="../img/category/cat"+ img +"@2x.webp 2x" alt="img" width="312" height="165" loading="lazy")

mixin product-card(img, title, price)
	.product-card
		.product-card__img
			img.img-contain(src="./img/products/prod"+img+".webp", srcset="./img/products/prod"+img+"@2x.webp 2x" alt="img" loading="lazy")
		.product-card__desk
			.product-card__title !{title}
			.product-card__price от !{price} руб./м3
			button.btn Купить
mixin product-card-ui(img, title, price)
	.product-card
		.product-card__img
			img.img-contain(src="../img/products/prod"+img+".webp", srcset="../img/products/prod"+img+"@2x.webp 2x" alt="img" loading="lazy")
		.product-card__desk
			.product-card__title !{title}
			.product-card__price от !{price} руб./м3
			button.btn Купить

mixin breadcrumbs(...items)
	ul.breadcrumbs
		li
			a(href="#!")
				svg.svg-logo
					use(href='../img/sprite.svg#svg-logo')
		each item in ...items
			li
				a(href="#!") !{item}