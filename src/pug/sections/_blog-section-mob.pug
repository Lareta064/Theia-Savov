// BLOG
section.blog
	.container
		h2.h2 Блог
		.blog-content-mobile
			// TABS SLIDERS ===
			.tabs-block.myswiper-container
				.tabs-block-nav.flex
					.tabs-nav
						a.tabs-nav__item.active(href="#!" data-tab="all-mob") Все
						a.tabs-nav__item(href="#!" data-tab="news-tab-mob") Новости
						a.tabs-nav__item(href="#!" data-tab="project-tab") Проекты
						a.tabs-nav__item(href="#!" data-tab="recomend-tab") советы 
					
				.swiper
					#all-mob.tabs-body.active
						.tabs-swiper.special-slider
							.swiper-wrapper
								.swiper-slide
									+blog-card(1)
								.swiper-slide
									+blog-card(2)
								.swiper-slide
									+blog-card(3)
								.swiper-slide
									+blog-card(4)
								
							.tabs-swiper-pagination
					#news-tab-mob.tabs-body
						.tabs-swiper.special-slider
							.swiper-wrapper
								.swiper-wrapper
								.swiper-slide
									+blog-card(4)
								.swiper-slide
									+blog-card(2)
								.swiper-slide
									+blog-card(3)
								.swiper-slide
									+blog-card(1)
								
							.tabs-swiper-pagination
		
		include _dark-form-subscribe
		