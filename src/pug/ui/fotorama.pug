<!DOCTYPE html>
html(lang="ru")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")

		//====убрать синий цвет у ссылок в сафари ========
		meta(name="format-detection" content="telephone=no")
		
		link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css')
		link(rel="stylesheet", href="../css/main.css")
		title UI-KIT
		style.
			
			
			.swiper-slide {
				
				display: flex;
				justify-content: center;
				align-items: center;
			}

			.swiper-slide img {
				display: block;
				width: 100%;
				height: 100%;
				object-fit: cover;
			}


			.mySwiperFotorama {
				height: 100%;
				background-color: #EDEDED;
				border-radius: 10px;
				width: calc(100% - 193px - 20px);
			}

			.mySwiperThumb {
				height: 100%;
				width:193px;
				box-sizing: border-box;
			}

			.mySwiperThumb .swiper-slide {
				height: 130px!important;
				img{
					border-radius: 10px;
					}
			}

			.mySwiperThumb .swiper-slide-thumb-active {
				opacity: 1;
			}

			.swiper-slide img {
				display: block;
				width: 100%;
				height: 100%;
				object-fit: cover;
			}
 
	body.body-dashboard

		include ui-navigation.pug

		block content
			.container-dashboard
				h2 Фоторама
				.container-dashboard__content
					.fotorama
						.swiper.mySwiperThumb(thumbsslider)
							.swiper-wrapper
								.swiper-slide
									img(src='https://swiperjs.com/demos/images/nature-1.jpg' width="193" height="130" alt="img")
								.swiper-slide
									img(src='https://swiperjs.com/demos/images/nature-2.jpg' width="193" height="130" alt="img")
								.swiper-slide
									img(src='https://swiperjs.com/demos/images/nature-3.jpg' width="193" height="130" alt="img")
								.swiper-slide
									img(src='https://swiperjs.com/demos/images/nature-4.jpg' width="193" height="130" alt="img")
								.swiper-slide
									img(src='https://swiperjs.com/demos/images/nature-5.jpg' width="193" height="130" alt="img")
								.swiper-slide
									img(src='https://swiperjs.com/demos/images/nature-6.jpg' width="193" height="130" alt="img")
							
							.mySwiperThumb-next
								span &larr;
							.mySwiperThumb-prev
								span &rarr;
						
						.swiper.mySwiperFotorama
						
							.swiper-wrapper
								.swiper-slide
									img(src='https://swiperjs.com/demos/images/nature-1.jpg' width="900" height="470" alt="img")
								.swiper-slide
									img(src='https://swiperjs.com/demos/images/nature-2.jpg' width="900" height="470" alt="img")
								.swiper-slide
									img(src='https://swiperjs.com/demos/images/nature-3.jpg' width="900" height="470" alt="img")
								.swiper-slide
									img(src='https://swiperjs.com/demos/images/nature-4.jpg' width="900" height="470" alt="img")
								.swiper-slide
									img(src='https://swiperjs.com/demos/images/nature-5.jpg' width="900" height="470" alt="img")
								.swiper-slide
									img(src='https://swiperjs.com/demos/images/nature-6.jpg' width="900" height="470" alt="img")
			
			
			
			//  Swiper JS 
			script(src='https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js')
			//  Initialize Swiper 
			script.
				
				let mySwiperThumb = new Swiper(".mySwiperThumb", {
					spaceBetween: 20,
					
					slidesPerView: 'auto',
					direction: "vertical", // Вертикальный режим
					freeMode: true,
					watchSlidesProgress: true,
					navigation: {
						nextEl: ".swiper-button-next",
						prevEl: ".swiper-button-prev",
					},
					});
					var mySwiperFotorama = new Swiper(".mySwiperFotorama", {
					spaceBetween: 10,
					speed: 800,
					
					thumbs: {
						swiper:  mySwiperThumb,
					},
				});
				